<html>

<head>
    <title></title>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
    <script type="text/javascript" src="../internal.js"></script>
    <link href="/js/ele/index.css" rel="styleSheet">
    <!-- <link rel="stylesheet" href="https://unpkg.com/element-ui/lib/theme-chalk/index.css"> -->
    <link href="./charts.css " rel="stylesheet" type="text/css" />
    <!-- <script src="https://libs.baidu.com/jquery/1.10.2/jquery.min.js"></script> -->
    <script src="/js/jquery-2.1.4.min.js"></script>
    <script src="/js/vue.min.js"></script>
    <script src="/js/ele/index.js"></script>
    <!-- <script src="https://unpkg.com/element-ui/lib/index.js"></script> -->

    <style>
        .el-popper[x-placement^=bottom] {
            height: 140px !important;
            overflow: auto !important;
        }
    </style>
</head>

<body>
    <div id="app">
        <el-form size="small" label-width="80px">

            <el-row>
                <el-col :span="12">
                    <el-form-item label="宽度">
                        <el-input v-model="width"></el-input>
                    </el-form-item>
                </el-col>
                <el-col :span="12">
                    <el-form-item label="长度">
                        <el-input v-model="height"></el-input>
                    </el-form-item>
                </el-col>
            </el-row>

            <el-row>
                <el-col :span="12">
                    <el-form-item label="图表类型">
                        <el-select v-model="type">
                            <el-option v-for="(res,index) in options" :key="index" :label="res.name" :value="res.value">
                            </el-option>
                        </el-select>
                    </el-form-item>
                </el-col>
                <el-col :span="12">
                    <el-form-item label="数据类型">
                        <el-select v-model="datatype" style="width:100%;">
                            <el-option v-for="(res,index) in datatypeList" :key="index" :label="res.display"
                                :value="res.value"></el-option>
                        </el-select>
                    </el-form-item>
                </el-col>
            </el-row>
            <el-form-item label="过滤器">
                <el-input v-model="filter" placeholder="请输入过滤器"></el-input>
            </el-form-item>
            <el-form-item label="采集项">
                <el-cascader size="small" style="width: 100%;" v-model="cjobTemp" :options="cjobList" filterable
                    :props="{ value:'fullname',label:'display'}">
                </el-cascader>
            </el-form-item>
            <el-form-item label="分类统计">
                <el-select multiple :multiple-limit="limit" v-model=" group" style="width:100%;">
                    <el-option v-for="(res,index) in groupList" :key="index" :label="res.display"
                        :value="String(res.id)"></el-option>
                </el-select>
            </el-form-item>
            </el-col>
        </el-form>
    </div>

</body>
<script>
    new Vue({
        el: "#app",
        data: {
            type: "",
            options: [{
                value: "line",
                name: "折线图"
            }, {
                value: "bar",
                name: "柱状图"
            }, {
                value: "pie",
                name: "饼图"
            }],
            cjobList: [],
            cjob: "",
            cjobTemp: [],
            groupList: [],
            group: [],
            width: "",
            height: "",
            limit: 1,
            datatype: "indicator",
            datatypeList: [{
                value: "indicator",
                display: "指标项"
            }, {
                value: "summary",
                display: "汇总项"
            }, {
                value: "original",
                display: "采集项"
            }],
            filter: ""
        },
        watch: {
            "cjobTemp"(val) {
                this.cjob = val[val.length - 1];
                this.getGroupList();
            },
            "type"(val) {
                if (val == "bar" || val == "line") {
                    this.limit = 2
                } else if (val == "pie") {
                    this.group = [];
                    this.limit = 1;
                }
            }

        },
        mounted: function () {
            this.getCjobList();

            var self = this;
            //dialog确认事件
            dialog.onok = function () {
                var info = {
                    type: self.type,
                    cjob: self.cjobTemp,
                    group: self.group,
                    width: self.width,
                    height: self.height,
                    datatype: self.datatype,
                    filter: self.filter
                }
                console.log(info)
                //执行图表命令
                editor.execCommand('mycharts', info);
            };
            var mycharts = editor.selection.getStart(),
                link = domUtils.findParentByTagName(mycharts, "span", true);
            if (link && link.getAttribute("data-attr")) {
                var data = JSON.parse(link.getAttribute("data-attr"))
                self.width = data.width || "";
                self.height = data.height || "";
                self.type = data.type || "";
                self.group = data.group || "";
                self.datatype = data.datatype || "indicator";
                self.filter = data.filter || ""
                self.cjobTemp = data.cjob.map(d => {
                    if (!d) {
                        return undefined;
                    }
                    return d
                });
            }

        },
        methods: {
            getCjobList: function () {
                var self = this;
                var indicator = window.localStorage.getItem("indicator");
                $.ajax({
                    url: "/tes/cjob/list2?id=" + indicator,
                    success: function (res) {
                        if (res && res.data) {
                            self.cjobList = res.data;
                        }
                    }
                })
            },
            getGroupList: function () {
                var self = this;
                var indicator = window.localStorage.getItem("indicator");
                $.ajax({
                    url: "/tes/cjob/list1?fullname=" + self.cjob,
                    success: function (res) {
                        if (res && res.data) {
                            self.groupList = res.data;
                            self.groupList.unshift({
                                display: "",
                                id: ""
                            })
                        }
                    }
                })
            }
        }
    })
</script>

</html>